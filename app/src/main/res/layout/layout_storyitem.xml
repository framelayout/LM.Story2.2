<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="#a0bec4ca"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/portrait_story"
            android:background="#868c93"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="6dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nickname_story"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="nickname"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/city_story"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:hint="city"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/date_story"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="时间是："
                android:gravity="center_vertical"/>
            
        </LinearLayout>
        
    </LinearLayout>
    <TextView
        android:id="@+id/info_story"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="此处显示故事详情"/>
    <GridLayout
        android:id="@+id/imgs_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginLeft="6dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_talk"/>
        <TextView
            android:id="@+id/comment_story"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="200+"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_heart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="200+"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_share"
                android:layout_marginRight="8dp"
                />
        </RelativeLayout>

    </LinearLayout>




</LinearLayout>
