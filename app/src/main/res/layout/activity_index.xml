<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sidelayout"
    tools:context="com.dawn.lmstory22.IndexActivity">


    <include layout="@layout/layout_indexside"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#c63072ac"
                >
                <ImageButton
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/icon_log"
                    android:onClick="showSide"
                    />

                <RadioGroup
                    android:background="#fff"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:text="最新"
                        android:textSize="22dp"
                        android:gravity="center"
                        />
                    <RadioButton
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:text="最新"
                        android:textSize="22dp"
                        android:gravity="center"
                        />
                </RadioGroup>

                <ImageButton
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/icon_edit"
                    android:layout_alignParentRight="true"
                    android:onClick="toWrite"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff00">
                <ListView
                    android:id="@+id/index_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a3c1df"></ListView>
            </LinearLayout>

            <!--<FrameLayout-->
                <!--android:id="@+id/repalce_index"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#4f5be446"></FrameLayout>-->
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:id="@+id/overindexlayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#000"-->
            <!--android:orientation="vertical"-->
            <!--android:alpha="0"></LinearLayout>-->

    </RelativeLayout>




</android.support.v4.widget.SlidingPaneLayout>


