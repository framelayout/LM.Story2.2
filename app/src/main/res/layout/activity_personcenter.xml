<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.dawn.lmstory22.Activitys.PersonCenter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#c63072ac"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:onClick="goBack"
            >
            <ImageView
                android:layout_width="40dp"

                android:layout_height="wrap_content"
                android:background="@drawable/icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:text="返回"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="23dp"
            android:text="系统设置"/>
    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:background="#f1db1a"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="用户ID：xxxxxx"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:onClick="changename"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="昵称：混沌"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:onClick="changesex"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="性别：男"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:onClick="changeemail"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="邮箱：xxxx@qq.com"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:onClick="changebirthday"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="生日：1989-09-09"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#aae9b7"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3f4fdf"
            android:text="修改密码"
            android:onClick="changepass"
            />
    </LinearLayout>



</LinearLayout>
